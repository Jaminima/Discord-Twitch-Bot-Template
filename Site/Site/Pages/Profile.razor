@page "/Profile"
@using Backend.Data._MySQL.Objects;
@using Backend.Integrations;
@using Backend.Authorization;
@using Microsoft.AspNetCore.WebUtilities
@using Microsoft.Extensions.Primitives;
@using Newtonsoft.Json.Linq;
@using Blazored.SessionStorage;
@inject NavigationManager navManager;
@inject ISessionStorageService sessionStorage

<h1>Profile</h1>

<p>TwitchName: @T_name</p>
<p>StreamerId: @S_id</p>
<p>Email: @T_email</p>
<img src="@T_img" />

@code {
    string T_name, T_email, T_img;
    string S_id;

    JToken u_Data;
    Streamer s;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender) return;

        u_Data = await AuthAction.GetTwitchLogin(navManager, sessionStorage);

        if (u_Data != null)
        {
            T_name = u_Data["display_name"].ToString();
            T_email = u_Data["email"].ToString();
            T_img = u_Data["profile_image_url"].ToString();

            s = Site.Backend.Data.DataHandler.FindStreamer(T_name, T_email);
            S_id = s.Id.ToString();

            StateHasChanged();
        }
    }

}